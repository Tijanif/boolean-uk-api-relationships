datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOWDB")
}

generator client {
  provider = "prisma-client-js"
}

model Doctor {
  id           Int           @id @default(autoincrement())
  firstName    String
  lastName     String
  speciality   String
  appointments Appointment[]
}

model Appointment {
  id           Int      @id @default(autoincrement())
  practineName String
  date         DateTime
  time         Int
  reason       String
  doctorId     Int
  doctor       Doctor   @relation(fields: [doctorId], references: [id])
}

